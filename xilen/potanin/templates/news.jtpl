########################################################################
##
##    news_b - маленький список новостей в углу сайта,
##		разбит на 2 колонки
##
{%- macro NEWSLIST(news,pages=0) %}
<div class="tahoma ctext" style="margin-top:15px;">
    {% for n in news %}
<div style="clear:both;">
<b>{{n.date}}</b>
<b>{{n.title}}</b><br>
{% if n.img %} {% set pic=n.img %}
<div class="float_left" style="margin-top:15px;">
	{{pic.pict}}
</div>
{% endif %}<p>{{n.text}}</p></div>
{% endfor %}
{{pages}}
</div>
{% endmacro %}